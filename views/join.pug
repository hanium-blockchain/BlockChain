extends layout

block content
    .container
        h1.title join for blockchain
        br

        form(action='/', method='POST')

            .form-group
                label(for='id') id
                input.form-control(type='text', id='id', name='id', placeholder='input your id') 

            .form-group
                label(for='password') Password
                input.form-control(type='password', id='password', name='password', placeholder='input your password')

            .form-group
                label(for='name') Name
                input.form-control(type='text', id='name', name='name', placeholder='input your name')

            .form-group
                label(for='email') Email
                input.form-control(type='text', id='email', name='email', placeholder='input your email')

            .form-group
                label(for='phone') Phone
                input.form-control(type='phone', id='phone', name='phone', placeholder='input your phone number  (ex 01012341234)')

            .form-group
                label(for='evaluator') Evaluator
                input.form-control(type='checkbox', name='evaluator')
            
            .form-group-submit 
                button.btn.btn-primary.submit(type='submit') Join

