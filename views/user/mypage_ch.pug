extends layout

block content
    .container
        h2.title 내 정보 수정
        br
        br

        form(action='users/mypage_ch', method='POST')

            .form-group
                label(for='name') Name
                input.form-control(type='text', id='name', name='name',placeholder='Name',value=user.name)
            .form-group
                label(for='email') Email
                input.form-control(type='text', id='email', name='email',placeholder='Email',value=user.email)
            .form-group
                label(for='phone') Phone
                input.form-control(type='phone', id='phone', name='phone',placeholder='Phone',value=user.phone)
                //- a.nav-link.active(href='/') auth phone

            .form-group
                label(for='current_password') Current Password
                input.form-control(type='password', id='current_password', name='current_password', placeholder='Current Password')
            .form-group
                label(for='password') Password
                input.form-control(type='password', id='password', name='password', placeholder='Password')
            .form-group
              label(for='password_confirmation') Password Confirmation
              input.form-control(type='password', id='password_confirmation', name='password_confirmation', placeholder='Password Confirmation')
                  
            .form-group-submit 
                button.btn.btn-dark.submit(type='submit') Update

            .form-group-submit
                a.btn.btn-dark.back(href='/') back
